<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="buttonHandler"
            type="com.best.movie.note.ui.celebrities.CelebritiesFragment.CelebritiesFragmentButtonsHandler" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:context=".ui.celebrities.CelebritiesFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/popularCelebritiesTextView"
                style="@style/left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/popularCelebritiesSeeAllImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/popularCelebritiesSeeAllImageView" />

            <ImageView
                android:id="@+id/popularSeeAllButton"
                style="@style/yellow_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/popularCelebritiesSeeAllImageView"
                style="@style/yellow_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{buttonHandler::popularSeeAll}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularCelebritiesOneRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/popularCelebritiesSeeAllImageView"
                tools:listitem="@layout/movie_vertical_item" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularCelebritiesTwoRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/popularCelebritiesOneRecyclerView"
                tools:listitem="@layout/movie_vertical_item" />

            <TextView
                android:id="@+id/trendingCelebritiesTextView"
                style="@style/left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/trendingCelebritiesSeeAllImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/trendingCelebritiesSeeAllImageView" />

            <ImageView
                android:id="@+id/trendingCelebritiesSeeAllImageView"
                style="@style/yellow_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popularCelebritiesTwoRecyclerView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trendingCelebritiesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/trendingCelebritiesTextView"
                tools:layout_editor_absoluteX="-16dp"
                tools:listitem="@layout/movie_horizontal_small_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
